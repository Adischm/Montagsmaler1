<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="50dp"
        android:layout_centerHorizontal="true"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="** DIE MONTAGSMALER **"
        android:id="@+id/lobby_uebersicht_text" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:inputType="textPersonName"
        android:id="@+id/editText_username"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/editText_password"
        android:hint="Username"/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:inputType="textPassword"
        android:id="@+id/editText_password"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/textView_inputFailed"
        android:hint="Passwort"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/common_signin_btn_default_background"
        android:text=""
        android:id="@+id/textView_inputFailed"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@+id/textView_inputFailed"
        android:layout_centerHorizontal="true">

        <Button
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="Login"
            android:id="@+id/button_log"
            android:layout_centerVertical="true"
            android:onClick="@string/action_settings" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Registrieren"
            android:id="@+id/button_reg"
            android:layout_toRightOf="@id/button_log"/>

    </LinearLayout>

</RelativeLayout>
