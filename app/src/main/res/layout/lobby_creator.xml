<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="schule.adrian.montagsmaler.LobbyOverviewActivityFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Lobby Erstellen"
        android:id="@+id/tv_lobbyerstellen"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Lobby-Name:"
        android:id="@+id/tv_lobbyname"
        android:layout_below="@+id/tv_lobbyerstellen"
        android:layout_marginTop="30dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:id="@+id/edit_lobbyname"
        android:layout_below="@+id/tv_lobbyerstellen"
        android:layout_toRightOf="@id/tv_lobbyname"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ZurÃ¼ck"
        android:id="@+id/btn_back"
        android:layout_below="@+id/tv_lobbyname"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="40dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Erstellen"
        android:id="@+id/btn_create"
        android:layout_below="@+id/tv_lobbyname"
        android:layout_toRightOf="@id/btn_back"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp" />

</RelativeLayout>