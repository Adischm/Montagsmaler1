<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="schule.adrian.montagsmaler.RegisterActivity">


    <EditText
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:inputType="textPersonName"
        android:id="@+id/editText_username"
        android:layout_above="@+id/editText_password"
        android:hint="Username"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:inputType="textPassword"
        android:id="@+id/editText_password"
        android:layout_above="@+id/editText_passwordRepeat"
        android:hint="Passwort"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:inputType="textPassword"
        android:id="@+id/editText_passwordRepeat"
        android:hint="Wiederholen"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registrieren"
        android:id="@+id/button_register"
        android:layout_below="@+id/textView_inputFailed"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/common_signin_btn_default_background"
        android:text=""
        android:id="@+id/textView_inputFailed"
        android:layout_below="@+id/editText_passwordRepeat"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
